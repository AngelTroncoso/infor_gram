<div id="<%= dom_id article %>">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= article.content %>
  </p>

  <p>
    <strong>Categories:</strong>
    <% article.categories.each do |item| %>
      <%= content_tag :span, item.name, class: "tag"  %>
    <% end %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= article.location.name %>
  </p>

  <p>
    <strong>User:</strong>
    <%= article.user.email %>
  </p>

  <p>
    <strong>Available:</strong>
    <%= article.available %>
  </p>

</div>
